
<div class="container">

  <% provide :title, "Log In" %>

  <h3><%= yield :title %></h3>

  <form class="form-horizontal well">
    <%= form_tag sessions_path do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= submit_tag "Submit", :class => 'btn btn-primary' %>
    <% end %>
  </form>
</div>