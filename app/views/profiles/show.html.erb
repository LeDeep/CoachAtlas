<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:sport) %>:</strong></dt>
  <dd><%= @profile.sport %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @profile.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bio) %>:</strong></dt>
  <dd><%= @profile.bio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @profile.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_file_name) %>:</strong></dt>
  <dd><%= @profile.picture_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_content_type) %>:</strong></dt>
  <dd><%= @profile.picture_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_file_size) %>:</strong></dt>
  <dd><%= @profile.picture_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture_updated_at) %>:</strong></dt>
  <dd><%= @profile.picture_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:working_zip_code) %>:</strong></dt>
  <dd><%= @profile.working_zip_code %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
