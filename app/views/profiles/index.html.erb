<div class="container">
  <% provide :title, "Coach Atlas" %>

  <h1><%= yield :title %></h1>

  <h2>Waiting for Peter's light bulb to go off...</h2>

  <table class="table">
    <tr>
      <td>Name</td>    
      <td>Sport</td>
      <td>Zip Code</td>
      <td>Bio</td> 
      
    </tr>
    <% @profiles.each do |profile| %>
   
      <tr>
        <td><%= link_to "First Last", profile_path(profile.id) %></td>
        <td><%= profile.sport %></td>
        <td><%= profile.working_zip_code %></td>
        <td><%= profile.bio[0..150] %></td>
     </tr>
    <% end %>
  </table>
</div>
